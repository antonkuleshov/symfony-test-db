{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}
    <h1>Employee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>EmpNo</th>
                <th>BirthDate</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Gender</th>
                <th>HireDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.empNo }}</td>
                <td>{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ employee.firstName }}</td>
                <td>{{ employee.lastName }}</td>
                <td>{{ employee.gender }}</td>
                <td>{{ employee.hireDate ? employee.hireDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('employee_show', {'empNo': employee.empNo}) }}">show</a>
                    <a href="{{ path('employee_edit', {'empNo': employee.empNo}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('employee_new') }}">Create new</a>
{% endblock %}
