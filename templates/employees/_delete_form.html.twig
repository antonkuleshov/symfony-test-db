<form method="post" action="{{ path('employees_delete', {'empNo': employee.empNo}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.empNo) }}">
    <button class="btn">Delete</button>
</form>
