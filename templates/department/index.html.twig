{% extends 'base.html.twig' %}

{% block title %}Department index{% endblock %}

{% block body %}
    <h1>Department index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>DeptNo</th>
                <th>DeptName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ department.deptNo }}</td>
                <td>{{ department.deptName }}</td>
                <td>
                    <a href="{{ path('department_show', {'deptNo': department.deptNo}) }}">show</a>
                    <a href="{{ path('department_edit', {'deptNo': department.deptNo}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('department_new') }}">Create new</a>
{% endblock %}
