<form method="post" action="{{ path('departments_delete', {'deptNo': department.deptNo}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ department.deptNo) }}">
    <button class="btn">Delete</button>
</form>
